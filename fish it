-- MINI ICON
local mini = Instance.new("Frame", gui)
mini.Size = UDim2.new(0,46,0,46)
mini.Position = UDim2.new(0.5,-23,0.8,0)
mini.BackgroundColor3 = Color3.fromRGB(255,105,180)
mini.Visible = false
mini.BorderSizePixel = 0

local miniText = Instance.new("TextLabel", mini)
miniText.Size = UDim2.new(1,0,1,0)
miniText.Text = "B"
miniText.TextColor3 = Color3.new(1,1,1)
miniText.Font = Enum.Font.GothamBold
miniText.TextSize = 18
miniText.BackgroundTransparency = 1

-- DRAG FUNCTION
local function dragify(frame)
    local drag, start, pos
    frame.InputBegan:Connect(function(i)
        if i.UserInputType == Enum.UserInputType.MouseButton1 then
            drag = true
            start = i.Position
            pos = frame.Position
        end
    end)
    UIS.InputChanged:Connect(function(i)
        if drag and i.UserInputType == Enum.UserInputType.MouseMovement then
            local d = i.Position - start
            frame.Position = UDim2.new(pos.X.Scale,pos.X.Offset+d.X,pos.Y.Scale,pos.Y.Offset+d.Y)
        end
    end)
    UIS.InputEnded:Connect(function()
        drag = false
    end)
end

dragify(main)
dragify(mini)

-- BUTTON LOGIC
miniBtn.MouseButton1Click:Connect(function()
    main.Visible = false
    mini.Visible = true
end)

mini.InputBegan:Connect(function(i)
    if i.UserInputType == Enum.UserInputType.MouseButton1 then
        mini.Visible = false
        main.Visible = true
    end
end)

close.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

-- FPS BOOST REAL
fps.MouseButton1Click:Connect(function()
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
    Lighting.GlobalShadows = false
    Lighting.FogEnd = 9e9
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Trail") then
            v.Enabled = false
        end
    end
    fps.Text = "FPS BOOSTED"
end)