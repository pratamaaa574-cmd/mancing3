miniBtn.Text = "-"
miniBtn.BackgroundColor3 = Color3.fromRGB(80,80,80)
miniBtn.TextColor3 = Color3.new(1,1,1)
miniBtn.Font = Enum.Font.GothamBold
miniBtn.TextSize = 18
miniBtn.BorderSizePixel = 0

-- CONTENT
local fps = Instance.new("TextButton", main)
fps.Size = UDim2.new(0,140,0,30)
fps.Position = UDim2.new(0,20,0,60)
fps.Text = "FPS BOOST"
fps.BackgroundColor3 = Color3.fromRGB(255,105,180)
fps.TextColor3 = Color3.new(1,1,1)
